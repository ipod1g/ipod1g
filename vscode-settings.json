{
  // Functional Settings

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "auto-rename-tag.activationOnLanguage": ["*"],
  "files.autoSave": "afterDelay",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "gitlens.graph.showRemoteNames": true,
  "prettier.singleQuote": false,

  "editor.cursorSurroundingLines": 8,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.stickyScroll.enabled": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  "errorLens.enabled": true,

  "git.autofetch": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "javascript": true,
    "typescript": true,
    "typescriptreact": true
  },

  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "git-rebase-todo": "gitlens.rebase"
  },

  // Visual Settings

  // "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontFamily": "Geist Mono Variable Light, 'Courier New', monospace",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "scm.inputFontFamily": "Geist Mono Variable Regular",
  "notebook.output.fontFamily": "Geist Mono Variable Regular",
  "debug.console.fontFamily": "Geist Mono Variable Regular",
  "editor.codeLensFontFamily": "Geist Mono Variable Regular",
  "editor.inlayHints.fontFamily": "Geist Mono Variable Regular",
  "errorLens.fontFamily": "Geist Mono Variable Regular",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Kimbie Dark",
  "workbench.colorCustomizations": {
    "[Kimbie Dark]": {
      // "editor.background": "#7c502166"
      // enable for Vibrancy Continued Extension
      // "terminal.background": "#171E20",
      // "titleBar.activeBackground": "#171E20"
    }
  },

  "indentRainbow.colors": [
    "rgba(255,255,64,0.01)",
    "rgba(127,255,127,0.01)",
    "rgba(255,127,255,0.01)",
    "rgba(79,236,236,0.01)"
  ],
  "indentRainbow.errorColor": "rgba(128,32,32,0.25)",

  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF00FB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*!",
      "color": "#FF00FB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#82B1FF",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*?",
      "color": "#82B1FF",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#BF94C4",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "* todo",
      "color": "#BF94C4",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "note",
      "color": "#F4FF81",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "* note",
      "color": "#F4FF81",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],

  "terminal.integrated.tabs.defaultColor": "terminal.ansiYellow",

  "window.newWindowDimensions": "offset",
  "window.titleBarStyle": "custom",

  // * Misc Settings
  "jupyter.askForKernelRestart": false,
  "jupyter.askForLargeDataFrames": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "vsicons.dontShowNewVersionMessage": true,

  // * Vim Settings
  "vim.handleKeys": {
    "<C-w>": false,
    "<C-p>": false,
    "<C-f>": false
  },
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "h"],
      "commands": [
        {
          "command": "editor.action.showHover",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "t", "c"],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "w", "s"],
      "commands": [
        {
          "command": "workbench.action.splitEditor"
        }
      ]
    }
  ],
  "github.copilot.editor.enableAutoCompletions": true,
  "githubPullRequests.pullBranch": "never"
}
